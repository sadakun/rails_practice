<div class="container">
  <div class="row">

    <div class="col-sm-3"></div>

    <div class="col-sm-6 p-3">
      <div class="card mt-5">
        <div class="row">

          <div class="col-8">
            <div class="container p-4">
              <h2 class="book-title"><%= @book.book_title %></h2>
              <span class="book-author">by <strong><%= @book.book_author %></strong></span>
              <p class="mt-2"><%= @book.book_description %></p>
              <div>Published in <%= @book.book_published %></div>
            </div>

          </div>

          <div class="col-3">
            <div class="container text-center mt-5">
              <%= link_to 'BACK', index_path %>
              <a href="/book/edit/<%= @book.id %>">EDIT</a>
            </div>
          </div>

        <div>
      </div>
    </div>

  </div>
</div>