<div class="container">
  <h1>Books#index</h1>

  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 p-3">
      <div class="card table-responsive-sm">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Author</th>
              <th>Year</th>
            </tr>
          </thead>
          <tbody>
            <% @data.each do |value| %>
            <tr>
              <td><%= value.book_title %></td>
              <td><%= value.book_description %></td>
              <td><%= value.book_author %></td>
              <td><%= value.book_published %></td>

            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>