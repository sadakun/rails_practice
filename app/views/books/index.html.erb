<div class="container">

  <div class="row">
    <div class="col-sm-3"></div>

    <div class="col-sm-6 p-3">
      <p><%= flash[:addMessage]%></p>
      <p><%= flash[:updateMessage]%></p>
      
      <% @books.each do |book| %>

        <div class="card">
          <div class="row">
            <div class="col-8">
              <div class="container p-4">
                
                <h1 class="book-title"><%= book.book_title %></h1>
                <span class="book-author">by <strong><%= book.book_author %></strong></span>
              </div>
            </div>

            <div class="col-4">
              <div class="container text-center mt-5">
                <%#= link_to 'SHOW', show_path(book), style:"text-decoration:none; color: grey;" %>
                <a href="/show/<%= book.id %>">SHOW</a>
              </div>
            </div>
          </div>
        </div>
    
      <% end %>
    </div>

  </div>
</div>